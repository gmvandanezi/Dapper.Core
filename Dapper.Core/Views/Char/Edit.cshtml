@model Dapper.Core.Models.Character

@{
    ViewData["Title"] = "Atualizar" + Model.Nome;
}

<h4 class="alert alert-secondary">Atualizar @Model.Nome</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Id" type="hidden" />
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Sexo</label><br />
                <input type="radio" asp-for="Gender" value="0" /> Masculino<br />
                <input type="radio" asp-for="Gender" value="1" /> Feminino<br />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Vocação</label><br />
                <input type="radio" asp-for="Vocacao" value="Guerreiro" /> Guerreiro<br />
                <input type="radio" asp-for="Vocacao" value="Mago" /> Mago<br />
                <input type="radio" asp-for="Vocacao" value="Sacerdote" /> Sacerdote<br />
                <input type="radio" asp-for="Vocacao" value="Arqueiro" /> Arqueiro<br />
                <input type="radio" asp-for="Vocacao" value="Assassino" /> Assassino<br />
                <input type="radio" asp-for="Vocacao" value="Druida" /> Druida<br />
                <span asp-validation-for="Vocacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Atualizar" class="btn btn-outline-primary btn-sm" /> &emsp;
                <a asp-action="Index" class="btn btn-link btn-sm">Voltar</a>
            </div>
        </form>
    </div>
</div>